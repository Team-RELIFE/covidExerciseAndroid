<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:paddingHorizontal="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:id="@+id/post_frame"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/roundshape"
            android:backgroundTint="@color/white"
            android:elevation="7dp">

            <TextView
                android:id="@+id/statusTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/toast_frame"
                android:backgroundTint="#ABE5FF"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="승인 완료"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/statusTv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/toast_frame"
                android:backgroundTint="#FFE493"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="승인 대기"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/alarmImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/statusTv0"
                android:background="@drawable/bell"
                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/alarmImg"

                android:paddingHorizontal="5dp"
                android:paddingVertical="1dp"
                android:text="@string/pt_address"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/postTv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusTv1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:text="항목"
                android:textColor="#323232"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/postTv"
                android:text="항목"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/traineeTv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postTv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text="신청자"
                android:textColor="#323232"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/traineeTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postTv2"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/traineeTv"
                android:text="신청자"
                android:textColor="#323232"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traineeTv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text="신청일"
                android:textColor="#323232"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/traineeTv2"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/dateTv"
                android:text="2021/10/04"
                android:textColor="#323232"
                android:textSize="15dp" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTv"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="취소" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>