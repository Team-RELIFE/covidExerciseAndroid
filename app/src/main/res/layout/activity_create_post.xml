<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#54BFEF">

            <ImageButton
                android:id="@+id/menuIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:src="@drawable/ic_stat_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="PT 게시판"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.Toolbar>


        <EditText
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:hint="제목"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/writerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:text="작성자"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/writerNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_toEndOf="@+id/writerTv"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:text="사용자 이름"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/contentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/writerTv"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="PT 내용"
            android:textStyle="bold"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/contentInfo"
            android:id="@+id/scrollView">

            <EditText
                android:id="@+id/create_contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:hint="내용"
                android:textSize="18dp" />

        </ScrollView>

        <TableLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollView"
            android:padding="10dp"
            android:id="@+id/buttons">

            <TableRow>

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#54BFEF"
                    android:text="등록"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="취소" />
            </TableRow>


        </TableLayout>

    </RelativeLayout>

</RelativeLayout>