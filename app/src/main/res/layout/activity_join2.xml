<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity2">

    <TextView
        android:id="@+id/JoinMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/joinText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 신체정보 입력"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_below="@+id/JoinMainText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/cmEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/joinText2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:layout_below="@+id/joinText2"
        android:layout_toRightOf="@+id/cmEditText"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/kgEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/cmEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:layout_below="@+id/cmEditText"
        android:layout_toRightOf="@+id/kgEditText"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/JoinOkBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/signin"
        android:scaleType="fitCenter"
        android:layout_below="@+id/kgEditText"
        android:layout_centerInParent="true"
        android:background="#00ff0000"/>

</RelativeLayout>